extends ../layout


block head
  link(type="text/css", rel="stylesheet", href="/css/session/list.css")

block header  
  header
    h1
      a.icon-back(href="#")
      a(href="/party") #{title}
      a.icon-add(href="#")
        
block content
    div.main
      div.party-list#J_SessionList(data-id="#{id}")
      script#J_TemplateSession(type="javascript/template")
        div#party
          h2.title {{title}}
          div.from
            label 时间：
            span {{time}}
          div.from
            label 地点：
            span {{location}} 

        ul#session-list
        {{#each docs.sessions}}
        li 
          p {{from}} - {{to}}
          p {{title}}
        {{/each}}
        
    script
        KISSY.use("node, session/list", function(S, Node, SessionList){
            S.ready(function(){

                SessionList({
                    el: "#J_SessionList",
                    tpl: S.one("#J_TemplateSession").html()
                }).render();

            });
        });
