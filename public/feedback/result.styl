.content
    margin-top 10em
    position relative
    font-family "Microsoft YaHei"
.close-feedback
    padding 10px
    width 100px
    color #fff
    background-color #333
    text-align center
    position absolute
    right 20px
    top 50px
    cursor pointer
.session-info
    color #fff
    text-align center
    margin-top 1em
    .count
        em
            font-size 5em
.anim-num
    font-size 5em
    color #fff
    margin-top 0.5em
    font-family "Microsoft YaHei"
.stars-wrapper
    margin-top 3em
    height 5em
    position relative
.count-img
    position absolute
    top 0
    left 50%
    .score-stars-wrapper
        position absolute
        top 0
        left 0
    .star
        font-size 5em
        color #ccc
        display inline-block
        width 1em
        opacity 0
    .star-score
        font-size 5em
        color #ccc
        display inline-block
        width 1em
        color #fff
        opacity 0
.session-list
    position fixed
    bottom 0
    left 0
    width 100%
    li
        width 16.666%
        background rgb(208, 101, 3)
        text-align center
        float left
        display none
        i
            transform translate3d(0, 0, 0)
            font-style normal
            font-variant normal
            font-size 1.5em

            .no-start-feedback
                font-size 0.5em
                color #ccc

        a
            height 6em
            display block
            color rgba(249, 249, 249, .9)
            text-decoration none
            transition color .5s, background .5s, height .5s
            padding-top 1em

            .session-title
                padding-top 1em
    li:nth-child(6n+1)
        background rgb(208, 101, 3)
    li:nth-child(6n+2)
        background rgb(233, 147, 26)
    li:nth-child(6n+3)
        background rgb(27, 54, 71)
    li:nth-child(6n+4)
        background rgb(200, 155, 194)
    li:nth-child(6n+5)
        background rgb(204, 196, 150)
    li:nth-child(6n+6)
        background rgb(21, 40, 54)
    li:nth-child(6n+7)
        background rgb(140, 166, 105)