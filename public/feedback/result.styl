body
    background-color #23658b
    height 100%
header
    height 50px
    background-color #fff

    .header-logo
        font-size 2em
        text-decoration none
        font-weight bolder
        padding 20px
        padding-top 10px
        display block
        color #333
.session-info
    color #fff
    text-align center
    margin-top 1em
    .count
        em
            font-size 5em
.stars-wrapper
    margin-top 1em
    height 5em
    position relative
.count-img
    position absolute
    top 0
    left 50%
    .star
        font-size 5em
        color #ccc
    .star-score
        color:#fff
.session-list
    position absolute
    right 20px
    top 80px
    background-color #fff

    li
        line-height 58px
        margin-bottom 0
        border-bottom 1px solid #e5e5e5
        .count-num
            background-color #d7f2fb;
            padding 20px
            font-weight bolder
        .text
            padding 0 20px