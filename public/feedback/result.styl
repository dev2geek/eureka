.content
    margin-top 8em
    position relative
.session-info
    color #fff
    text-align center
    margin-top 1em
    .count
        em
            font-size 5em
.stars-wrapper
    margin-top 3em
    height 5em
    position relative
.count-img
    position absolute
    top 0
    left 50%
    .score-stars-wrapper
        position absolute
        top 0
        left 0
    .star
        font-size 5em
        color #ccc
        display inline-block
        width 1em
    .star-score
        font-size 5em
        color #ccc
        display inline-block
        width 1em
        color:#fff
.session-list
    position absolute
    right 20px
    top 80px
    background-color #fff

    li
        line-height 58px
        margin-bottom 0
        border-bottom 1px solid #e5e5e5
        .count-num
            background-color #d7f2fb;
            padding 20px
            font-weight bolder
        .text
            padding 0 20px