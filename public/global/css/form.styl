form 
  box-shadow: 2px 2px 10px #666;

.row,.lastrow
  line-height: 40px
  border-bottom: 1px solid #ccc
  background: #d7f2fb
  color: #333
  .column
    display: inline-block
    padding-left: 2.5%
    min-height: 40px
    height: 100%
    width: 70%
    background: #fff
    &:first-child
      text-align: right
      display: block
      float: left
      background: none
      width: 25%

      label
        margin-right: 20px
    input[type="date"],
    input[type="time"]
      width: auto
      font-size: 1em

.msg
  text-align: center

.lastrow
  .column
    padding-top: 10px
    padding-bottom: 10px
    input
      width: auto
    form
      display: inline
