.button
  margin: 0 20px 0 0
  padding: 7px 20px
  height: auto
  line-height: 20px
  font-size: 20px
  color: #454545
  background-color: #E5E9E8
  border: 1px solid #A5A8A8
  border-radius: 3px
  box-shadow: inset 0 1px #FFF
  text-shadow: 0 1px #FFF
  cursor: pointer
  appearance: none
  text-decoration: none

  &:active
    background-color: #D3D7D7
    box-shadow: inset 0 1px rgba(0, 0, 0, 0.12)
