@import 'nib'

html, body
  height: 100%

body
  background-color: #58a8c1

header
  position: relative
  width: 100%
  background-color: #303030
  height: (50/16)*1em
  
  a 
    &.back-icon-wrapper
      border-color: #fff #303030 #303030 #fff
      border-width: (25/16)*1em
      border-style: solid 

      height: 0
      width: 0 
      line-height: 0 

      position: absolute
      top: 0
      left: 0  
      .icon-back
        position: absolute
        top: -13px
        left: -20px
    &.icon-add
      position: absolute
      top: (10/16)*1em
      right: (20/16)*1em

  h1  
    color: #fff
    text-align: center
    
    height: (50/26)*1em
    line-height: (50/26)*1em


/* 仅iphone4 竖版 320 */
@media only screen and (max-width: 320px) 
  .panel
    height: 90%

/* 仅iPhone 横版 480 */
@media only screen and (min-width: 321px) and (max-width: 480px) 
  .panel
    height: 85%

/* 仅iPad 竖版 768 */
@media only screen and (min-width: 768px) and (max-width: 1023px) 
  .panel
    height: 96%

/* iPad 横版，以及所有大于（等于）1024宽度的普通pc屏幕 */
@media only screen and (min-width: 1024px) 
  .panel
    height: 80%

.mainCard
  background-color: #FFF
  -webkit-box-shadow: -1px 3px 11px #555
  box-shadow: -1px 3px 11px #555
  box-sizing(border-box)
  height: 90%
  overflow: auto
  -webkit-overflow-scrolling: touch
  margin: 5%

.submitStatus
  padding: 30px
  color: #333
  text-align: center


