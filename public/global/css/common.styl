@import 'nib'

html, body
  height: 100%

body
  background-color: #58a8c1

header
  position: relative
  width: 100%
  height: 50px

  h1
    background-color: #303030
    height: 50px

    text-align: center
    position: relative

    a 
      color: #fff
      text-decoration: none
      line-height: 50px

      &:visited 
        color: #fff
        text-decoration: none

      &.back-icon-wrapper
        border-color: #fff #303030 #303030 #fff
        border-width: 25px
        border-style: solid 

        height: 0
        width: 0 
        font-size: 0
        line-height: 0 

        position: absolute
        top: 0
        left: 0  
        .icon-back
          position: absolute
          top: -13px
          left: -20px


      &.icon-add
        position: absolute
        top: 10px
        right: 20px
      


.content
    background-color: #58A8C1
    padding: 70px 20px 20px 20px;
    height: 100%
    box-sizing(border-box)


.mainCard
  background-color: #FFF
  -webkit-box-shadow: -1px 3px 11px #555
  box-shadow: -1px 3px 11px #555
  height: 100%
  box-sizing(border-box)

.submitStatus
  padding: 30px
  color: #333
  text-align: center


