@import "../../global/css/font.styl"

// party info , add by shuier
mask()
  visibility hidden
  position absolute
  top 0
  left 0
  background-color: rgba(0,0,0,0.2)
  height: 100%
  width: 100%

.party-info
  background-color #d7f2fb
  border-top-left-radius 5px
  border-top-right-radius 5px
  padding 1em
  position relative

  h3
    margin: 0 0  0.5em

  .party-time, .party-loc
    margin: 0.5em 0 0.5em

  .icon-code
    position: absolute
    right: 1em
    top: 1em

  div.party-opts
    mask()
    .opt
      float left
      margin-top (50/16)*1em
      margin-left (70/16)*1em
      cursor pointer
      
ul.session-list
  li 
    border-bottom 1px solid #dbcccd
    margin-bottom 0
    position relative
    .session-info
      normal()
      display block
      padding 1em
      padding-right 0
      text-decoration none
      span.time
        display block
        margin-bottom 5px
        color #58a8c1
      span.title
        display block
        margin-bottom 0
    div.session-opts
      mask()
      .opt 
        float left
        margin-top (25 /16)*1em
        margin-left (35/16)*1em
        cursor pointer

  .entry-list-edit-show {

    .session-opts {
      visibility: visible !important
    }
  }
            
div.add-session-bar
  padding: 1em

  a.text 
    i.icon-add-session
      margin-right 5px

    color #6c93a0
    large()
    margin-left 5px
    text-decoration none
.code
  display none
  padding-top 60px

.party-item {
  height: 100%;
  overflow: hidden;
  background: #fff;
  -webkit-user-select: none;
}


// flip
.flip3d
  position: relative
  height: 400px

  .flip3d-front, .flip3d-back
    transform: rotate3d(0, 1, 0, 0)
    transition: transform 0.5s ease
    backface-visibility: hidden
  .flip3d-back
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    transform: rotate3d(0, 1, 0, 180deg)

//  &:hover
//    .flip3d-front
//      transform: rotate3d(0, 1, 0, 180deg)
//    .flip3d-back
//      transform: rotate3d(0, 1, 0, 0)
  
.flip3d-flipped
  .flip3d-front
    transform: rotate3d(0, 1, 0, 180deg)
  .flip3d-back
    transform: rotate3d(0, 1, 0, 0)


