body
    background-color #23658b
    height 100%
header
    height 50px
    background-color #fff

    .header-logo
        font-size 2em
        text-decoration none
        font-weight bolder
        padding 20px
        padding-top 10px
        display block
        color #333
.session-info
    width 500px
    color #fff
    margin 20px

    h2
        color #fff
        margin-bottom 30px
    .count
        font-size 1em

        em
            font-size 3em
.count-img
    font-size 5em
    color #fff
    position absolute
    top 50%
    left 50%
    margin 0 -100px
.session-list
    position absolute
    right 20px
    top 80px
    background-color #fff

    li
        line-height 58px
        margin-bottom 0
        border-bottom 1px solid #e5e5e5
        .count-num
            background-color #d7f2fb;
            padding 20px
            font-weight bolder
        .text
            padding 0 20px