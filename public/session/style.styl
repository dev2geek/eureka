global-reset()

body
  background-color: #58a8c1
  line-height: 40px

h1
  margin: 0px

button 
  border-radius: 5px

.bar
  height: 50px
  background-color: #303030
  text-align: center
  h1
    color: #ffffff
    font-size: 24px
    line-height: 50px

.content
  background-color: #58a8c1
  padding: 20px

.sessionForm
  background-color: #ffffff
  box-shadow: -1px 3px 11px #555

.row
  line-height: 40px
  border-bottom: 1px solid #ccc
  .column
    display: inline-block
    padding-left: 20px
    height: 100%
    width: 30%
    &:first-child
      background-color: #d7f2fb
      text-align: right
      label
        margin-right: 20px
    input
      line-height: 24px
      border: 0px

.msg
  text-align: center

.lastrow
  line-height: 40px
  height: 90px
  .column
    display: inline-block
    padding-left: 20px
    padding-top: 20px
    height: 100%
    width: 30%
    form
      display: inline-block
    &:nth-child(2)
      width: 50%
    a, a:hover
      text-decoration: none
      
    .button
      color: #fff
      font-size: 20px
      background-color: #303030
      padding: 7px 20px
      border: 0px
      margin-right: 20px
      &:hover
        cursor: pointer
